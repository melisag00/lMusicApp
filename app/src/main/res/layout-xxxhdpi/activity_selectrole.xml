<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E223E"
    tools:context=".SelectRoleActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginTop="176dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="lMusic"
        android:textColor="#5A5D70"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/goToLoginTeacherPage"
        android:layout_width="303dp"
        android:layout_height="55dp"
        android:layout_marginTop="568dp"
        android:background="@drawable/all_buttons_bg"
        android:text="Teacher"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.Button
        android:id="@+id/goToLoginStudentPage"
        android:layout_width="303dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/all_buttons_bg"
        android:text="Student"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToLoginTeacherPage" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="355dp"
        android:layout_height="254dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.943"
        app:srcCompat="@drawable/select_role_bg" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="29dp"
        android:layout_marginTop="500dp"
        android:text="Select your role"
        android:textColor="#1E223E"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="168dp"
        android:layout_height="149dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>